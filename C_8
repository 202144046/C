C프로그래밍 8주차 수업

#include <stdio.h>

int main(void)
{
    int x, y, sum, diff, mul, div;

    x=20;
    y=10;
    sum = x + y;
    diff = x-y;
    mul = x*y;
    div = x/y;
    printf("두 수의 합 : %d\n",sum);
    printf("두 수의 차 : %d\n",diff);
    printf("두 수의 곱 : %d\n",mul);
    printf("두 수의 몫 : %d\n",div);

    return 0;
}


#define _CRT_SECURE_NO_WORNINGS
#include <stdio.h>
int main(void)
{
    int x;
    int y;

    printf("첫번째 숫자를 입력하시오\n");
    scanf("%d", &x);
    printf("두번째 숫자를 입력하시오\n");
    scanf("%d", &y);
    printf("두 수의 합 : %d", x+y);

    return 0;

}


#define _CRT_SECURE_NO_WORNINGS
#include <stdio.h>
int main(void)

{
double x; //원의 반지름
double y; //원의 면적

printf("반지름을 입력하시오 : ");
scanf("%lf", &x);
y = 3.14 * x * x;
printf("원의 면적 : %lf", y);

return 0;

}

#define _CRT_SECURE_NO_WORNINGS
#include <stdio.h>
int main(void)
{
    int x, y;
    float z;
    printf("환율을 입력하시오 : %d\n",&x);
    scanf("%d",&x);
    printf("원화 금액을 입력하시오 : %d\n", &y);
    scanf("%d", &y);

    z=y/x;

    printf("원화 %d원은 %lf달러 입니다.", &y&z );

}


#define _CRT_SECURE_NO_WORNINGS
#include <stdio.h>
int main(void)
{
    double x, y, z, sum;
    
    printf("3개의 실수를 입력하시오 : \n");
    scanf("%lf %lf %lf", &x,&y,&z);
    sum=x+y+z;
    printf("합계=%.2lf\n",sum);
    printf("평균=%.2lf\n",sum/3);
}

#define _CRT_SECURE_NO_WORNINGS
#include <stdio.h>
int main(void)
{
    double w, h, area, perimeter;
    scanf("%lf%lf", &w,&h);
    area = w*h;
    perimeter = 2*(w+h);
    printf("사격형의 넓이 : %lf\n", area);
    printf("사격형의 둘레 : %lf", perimeter);

}

#include <stdio.h>
int main(void)
{
    double light_speed = 300000;
    double distance = 149600000;

    double time;

    time = distance / light_speed;
    time = time / 60.0;

    printf("빛의 속도는 %fkm/s \n", light_speed);
    printf("태양과 지구와의 거리 %fkm \n", distance);
    printf("도달 시간은 %f초\n", time);

    return 0;
}

